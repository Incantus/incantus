name = 'Loxodon Hierarch'
cardnum = 214
expansion = 'Ravnica'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Elephant','Cleric'])
cost = '2GW'
color = characteristic(['G','W'])
text = ['When Loxodon Hierarch comes into play, you gain 4 life.','GW, Sacrifice Loxodon Hierarch: Regenerate each creature you control.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(4, 4)
in_play_role = Permanent(card, subrole)

#################################

subrole.triggered_abilities = [TriggeredAbility(card,
  trigger=EnterTrigger("play"),
  match_condition=SelfMatch(card),
  ability=Ability(card, effects=ChangeLife(4)))
]

subrole.abilities = [ActivatedAbility(
  card, 
  cost=MultipleCosts([ManaCost("GW"),SacrificeCost()]),
  target=AllPermanentTargets(target_types=isCreature.with_condition(lambda creature, card=card: creature.controller==card.controller)),
  effects=ForEach(GiveKeyword(regenerate, keyword="regenerate")))
]


#################################