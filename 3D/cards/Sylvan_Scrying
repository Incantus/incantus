name = 'Sylvan Scrying'
cardnum = 302
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1G'
color = characteristic(['G'])
text = ['Search your library for a land card, reveal it, and put it into your hand. Then shuffle your library.']

out_play_role.abilities = [CastSorcerySpell(card, cost,
                                                    effects=[MoveCards(from_zone="library", to_zone="hand", number=1, card_types=isLandType, reveal=True), ShuffleLibrary()])
]