
name = 'Overrun'
cardnum = 284
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2GGG'
color = characteristic(['G'])
text = ['Creatures you control get +3/+3 and gain trample until end of turn.']

out_play_role.abilities = [CastSorcerySpell(card, cost,
                                target=AllPermanentTargets(target_types=isCreature.with_condition(lambda c, self=card: c.controller==self.controller)),                                effects=[ForEach(AugmentPowerToughness(power=3,toughness=3)),
                                         ForEach(GiveKeyword(trample, keyword="trample"))])
]
