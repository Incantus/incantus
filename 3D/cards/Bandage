name = 'Bandage'
cardnum = 9
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = 'W'
color = characteristic(['W'])
text = ['Prevent the next 1 damage that would be dealt to target creature or player this turn.', 'Draw a card.']

out_play_role.abilities = [CastInstantSpell(card, cost,
				target=[Target(target_types=[isPlayer,isCreature]), Target(targeting="you")], 
				effects=[GiveKeyword(lambda role: prevent_damage(role, amt=1)), DrawCard(1)])]