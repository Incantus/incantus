name = 'Flashfreeze'
cardnum = 84
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1U'
color = characteristic(['U'])
text = ['Counter target red or green spell.']

out_play_role.abilities = [CastInstantSpell(card, cost,
                                target=StackTarget(target_types=isSpellAbility.with_condition(lambda a: a.card.color == "R" or a.card.color == "G")),
                                effects=CounterAbility())
]