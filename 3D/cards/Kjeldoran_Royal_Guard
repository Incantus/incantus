name = 'Kjeldoran Royal Guard'
cardnum = 25
expansion = '10E'
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Human', 'Soldier'])
cost = '3WW'
color = characteristic(['W'])
text = ['T: All combat damage that would be dealt to you by unblocked creatures this turn is dealt to Kjeldoran Royal Guard instead.']

subrole = Creature(2, 5)

in_play_role = Permanent(card, subrole)

#################################

def condition(amt, source, combat):
    return combat == True and not source.blocked

subrole.abilities = [ActivatedAbility(card, TapCost(), effects=GiveKeyword(lambda to_target, card=card, condition=condition: redirect_damage(to_target, card, -1, txt='Redirect to Kjeldoran Royal Guard', condition=condition), expire=True)),
]
subrole.triggered_abilities = []
subrole.static_abilities = []

#################################



