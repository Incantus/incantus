name = 'Spitting Earth'
cardnum = 238
expansion = '10E'
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '1R'
color = characteristic(['R'])
text = ['Spitting Earth deals damage equal to the number of Mountains you control to target creature.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=Target(target_types=isCreature),
                                effects=DealDamage(LazyInt(lambda c=card: len(c.controller.play.get(isLand.with_condition(lambda l: l.subtypes == "Mountain"))))))
]
