
name = 'Thelonite Hermit'
cardnum = 228
expansion = 'Time Spiral'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Elf', 'Shaman'])
cost = '3G'
color = characteristic(['G'])
text = ["Saproling creatures get +1/+1.", "Morph 3GG", "When Thelonite Hermit is turned face up, put four 1/1 green Saproling creature tokens into play"]

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(1, 1)

in_play_role = Permanent(card, subrole)

#################################

# XXX Need to implement morph

morph(in_play_role, cost="3GG")

subrole.abilities = []
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = Trigger(event=MorphEvent()),
                                      match_condition=SelfMatch(card),
                                      ability=Ability(card,
                                                target=Target(targeting="you"),
                                                effects=CreateToken({"name":"Saproling", "type":"Creature", "color":"G", "subtypes":["Saproling"], "role": TokenCreature(1,1)}, number=4)))
]
subrole.static_abilities = [PermanentTrackingAbility(card,
                                        condition = isCreature.with_condition(lambda c: c.subtypes == "Saproling"),
					events = SubtypeModifiedEvent(),
                                        effects = AugmentPowerToughness(power=1, toughness=1, expire=False))
]

#################################
