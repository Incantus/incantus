name = 'Manabarbs'
cardnum = 218
expansion = '10E'
type = characteristic('Enchantment')
supertype = characteristic('')
subtypes = characteristic([])
cost = '3R'
color = characteristic(['R'])
text = ['Whenever a player taps a land for mana, Manabarbs deals 1 damage to that player.']

subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
trigger = Trigger(ManaEvent())
# This isn't quite right, since it doesn't check that the tapped status is a result of tapping for mana
# But no abilities give you free mana without tapping
subrole.triggered_abilities = [TriggeredAbility(card,
                                        trigger = trigger,
                                        match_condition = lambda sender: sender.type == "Land" and sender.tapped,
                                        ability = Ability(card, target=Target(targeting=lambda t=trigger: t.sender.controller),
                                                        effects=DealDamage(1)))
]
subrole.static_abilities = []

#################################
