name = 'Centaur Garden'
cardnum = 0
expansion = ''
type = characteristic('Land')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = NoCost()
color = no_characteristic()
text = ['T Add G to your mana pool. Centaur Garden deals 1 damage to you.', 'Threshold - G, T, Sacrifice Centaur Garden: Target creature gets +3/+3 until end of turn. Play this ability only if seven or more cards are in your graveyard.']

subrole = Land(color)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = [ManaAbility(card, TapCost(), effects=[AddMana('G'),DealDamage(1)]),
		     ThresholdAbility(card, cost=MultipleCosts([ManaCost("G"), TapCost(), SacrificeCost()]), target=Target(target_types=isCreature), effects=AugmentPowerToughness(3, 3))]

#################################