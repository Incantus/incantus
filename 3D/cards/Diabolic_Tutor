name = 'Diabolic Tutor'
cardnum = 135
expansion = '10E'
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '2BB'
color = characteristic(['B'])
text = ['Search your library for a card and put that card into your hand. Then shuffle your library.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
				target=Target(targeting="controller"),
				effects=[MoveCards(from_zone="library", to_zone="hand", number=1), ShuffleLibrary()])
]
