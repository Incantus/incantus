name = 'Morsel Theft'
cardnum = 68
expansion = 'Morningtide'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = characteristic(['Rogue'])
cost = '2BB'
color = characteristic(['B'])
text = ["Prowl 1B", "Target player loses 3 life and you gain 3 life. If Morsel Theft's prowl cost was paid, draw a card."]

out_play_role.abilities = [CastNonPermanentSpell(card, cost, 
				target=[Target(target_types=isPlayer), Target(targeting="you")],
				effects=[ChangeLife(-3), ChangeLife(3)])]

out_play_role.triggered_abilities = []
prowl(out_play_role, card, cost="1B", ability=Ability(card, target=Target(targeting="you"), effects=DrawCard(1)))
