name = 'Plagiarize'
cardnum = 97
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '3U'
color = characteristic(['U'])
text = ['Until end of turn, if target player would draw a card, instead that player skips that draw and you draw a card.']

# Skip the player's draw, and I draw
def draw(self, card=card): card.controller.draw()

out_play_role.abilities = [CastInstantSpell(card, cost,
                                target=Target(target_types=isPlayer),
                                effects=ReplacementEffect(draw, "draw", txt=name, expire=True))
]