name = 'Cryoclasm'
cardnum = 195
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2R'
color = characteristic(['R'])
text = ["Destroy target Plains or Island. Cryoclasm deals 3 damage to that land's controller."]

target = Target(target_types=isLand.with_condition(lambda l:l.subtypes == "Plains" or l.subtypes == "Island"))

out_play_role.abilities = [CastNonPermanentSpell(card, cost, 
				target=[target, Target(lambda t=target: t.target.controller)],
				effects=[Destroy(), DealDamage(3)], copy_targets=False)
]





