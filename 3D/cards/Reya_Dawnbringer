name = 'Reya Dawnbringer'
cardnum = 35
expansion = '10E'
type = characteristic('Creature')
supertype = characteristic('Legendary')
subtypes = characteristic(['Angel'])
cost = '6WWW'
color = characteristic(['W'])
text = ['Flying', 'At the beginning of your upkeep, you may return target creature card from your graveyard to play.']

subrole = Creature(4, 6)

in_play_role = Permanent(card, subrole)

#################################

flying(subrole)
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = PlayerTrigger(event=UpkeepStepEvent()),
                                      match_condition = lambda player, self=card: player==self.controller,
                                      ability = ChoiceAbility(card, "0", msg="return target creature card from your graveyard?",
                                                         target=Target(target_types=isCreatureType, zone="graveyard", zone_limit="controller"),
                                effects=ChangeZoneToPlay(from_zone="graveyard")))
]

#################################
