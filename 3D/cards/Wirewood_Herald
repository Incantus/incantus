name = 'Wirewood Herald'
cardnum = 302
expansion = 'Onslaught'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Elf'])
cost = '1G'
color = characteristic(['G'])
text = ['When Wirewood Herald is put into a graveyard from play, you may search your library for an Elf card, reveal that card, and put it into your hand. If you do, shuffle your library.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(1, 1)
in_play_role = Permanent(card, subrole)

#################################

subrole.triggered_abilities = [TriggeredAbility(
	card,
	trigger=EnterFromTrigger(
		from_zone="play",
		to_zone="graveyard"),
	match_condition=SelfMatch(card),
	ability = Ability(
		card,
		effects=YouMay(MoveCards(
			from_zone="library",
			to_zone="hand",
			number=1,
			card_types=isCard.with_condition(
				lambda c:c.subtypes == "Elf"),
			reveal=True),
			msg="search library for Elf card?")))]

#################################