name = 'Lord of the Pit'
cardnum = 154
expansion = '10E'
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Demon'])
cost = '4BBB'
color = characteristic(['B'])
text = ['Flying, trample', "At the beginning of your upkeep, sacrifice a creature other than Lord of the Pit. If you can't, Lord of the Pit deals 7 damage to you."]

subrole = Creature(7, 7)

in_play_role = Permanent(card, subrole)

#################################

flying(subrole)
trample(subrole)
subrole.abilities = []
# XXX This doesn't do the option properly
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = PlayerTrigger(event=UpkeepStepEvent()),
                                      match_condition = lambda player, self=card: player==self.controller,
                                      ability = DoOrAbility(card, 
                                                        target=Target(target_types=isCreature.with_condition(lambda c, self=card: not c == self)),
                                                        failure_target=Target(targeting="controller"),
                                                        effects=Sacrifice(),
                                                        failed=DealDamage(7)))
]
subrole.static_abilities = []

#################################
