name = 'Riftstone Portal'
cardnum = 0
expansion = ''
type = characteristic('Land')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = NoCost()
color = no_characteristic()
text = ['T: Add 1 to your mana pool.', 'As long as Riftstone Portal is in your graveyard, lands you control have "T Add G or W to your mana pool."']

subrole = Land(color)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = [ManaAbility(card, TapCost(), effects=AddMana('1'))]

out_play_role.graveyard_abilities = [PermanentTrackingAbility(card,
                                        condition = isLand.with_condition(lambda l, self=card: l.controller == self.controller),
                                        events = SubtypeModifiedEvent(),
                                        effects = AddActivatedAbility(ManaAbility(card, cost=TapCost(), effects=ManaChoice(["G","W"])), expire=False))
]

#################################