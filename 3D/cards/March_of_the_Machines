
name = 'March of the Machines'
cardnum = 91
expansion = '10E'
type = characteristic('Enchantment')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '3U'
color = characteristic(['U'])
text = ['Each noncreature artifact is an artifact creature with power and toughness each equal to its converted mana cost.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

# XXX Doesn't give the correct power/toughness
subrole.abilities = []
