subtypes = characteristic([])
cost = '3U'
color = characteristic(['U'])
text = ['Each noncreature artifact is an artifact creature with power and toughness each equal to its converted mana cost.']

subrole = Enchantment()

in_play_role = Permanent(card, subrole)

