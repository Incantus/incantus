name = 'Allosaurus Rider'
cardnum = 101
expansion = 'Colsnap'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Elf', 'Warrior'])
cost = '5GG'
color = characteristic(['G'])
text = ["You may remove two green cards in your hand from the game rather than pay Allosaurus Rider's mana cost.", "Allosaurus Rider's power and toughness are each equal to 1 plus the number of lands you control."]

subrole = Creature(-1, -1)

in_play_role = Permanent(card, subrole)

#################################

out_play_role.abilities = [CastPermanentSpell(card, 
  cost=ChoiceCost(ManaCost(cost), RemoveFromHandCost(number=2, cardtype=isCard.with_condition(lambda c: c.color == "G"))))]

num_lands = LazyInt(lambda self=card: 1+len(self.controller.play.get(isLand)))
subrole.base_power = num_lands
subrole.base_toughness = num_lands

#################################