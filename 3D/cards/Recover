name = 'Recover'
cardnum = 172
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2B'
color = characteristic(['B'])
text = ['Return target creature card from your graveyard to your hand.', 'Draw a card.']

out_play_role.abilities = [CastSorcerySpell(card, cost,
                                target=[Target(target_types=isCreatureType, zone="graveyard", player_zone="controller"), Target(targeting="you")],
                                effects=[ChangeZone(from_zone="graveyard", to_zone="hand"), DrawCard(1)])        
]