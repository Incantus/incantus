
name = 'Kavu Predator'
cardnum = 132
expansion = 'Planar Chaos'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Kavu'])
cost = '1G'
color = characteristic(['G'])
text = ['Trample', 'Whenever an opponent gains life, put that many +1/+1 counters on Kavu Predator.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(2, 2)

in_play_role = Permanent(card, subrole)

#################################

trample(subrole)

trigger = Trigger(event=LifeChangedEvent())
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = trigger,
                                      match_condition = lambda sender, amount, card=card: sender == card.controller.opponent and amount > 0,
                                      ability = Ability(card, target=Target(targeting="self"),
                                                        effects=AddPowerToughnessCounter(number=LazyInt(lambda t=trigger: t.amount))))]


#################################
