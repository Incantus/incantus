
name = 'Telling Time'
cardnum = 114
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1U'
color = characteristic(['U'])
text = ['Look at the top three cards of your library. Put one of those cards into your hand, one on top of your library, and one on the bottom of your library.']

out_play_role.abilities = [CastInstantSpell(card, cost, effects=[MoveCards(from_zone="library", to_zone="hand", number=1, subset=3, prompt="Select one card for hand"), MoveCards(from_zone="library", to_zone="library", to_position="top", number=1, subset=2, required=True, prompt="Select one card for top of library"),MoveCards(from_zone="library", to_zone="library", from_position=2, to_position="bottom", number=1, required=True)])]
