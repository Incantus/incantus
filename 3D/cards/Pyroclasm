name = 'Pyroclasm'
cardnum = 222
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1R'
color = characteristic(['R'])
text = ['Pyroclasm deals 2 damage to each creature.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=AllPermanentTargets(target_types=isCreature),
                                effects=ForEach(DealDamage(2)))
]
