name = 'Skirk Fire Marshal'
cardnum = 229
expansion = 'Onslaught'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Goblin'])
cost = '3RR'
color = characteristic(['R'])
text = ['Protection from red', 'Tap five untapped Goblins you control: Skirk Fire Marshal deals 10 damage to each creature and each player.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(2, 2)
in_play_role = Permanent(card, subrole)

#################################

protection_from_red(subrole)

subrole.abilities = [ActivatedAbility(
	card,
	TapCost(
		cardtype=isPermanent.with_condition(
			lambda c: c.subtypes == "Goblin"),
		number=5),
	target=[
		AllPermanentTargets(target_types=isCreature),
		AllPlayerTargets()],
	effects=[
		ForEach(DealDamage(10)),
		ForEach(DealDamage(10))])]

#################################