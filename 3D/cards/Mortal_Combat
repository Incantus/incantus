name = 'Mortal Combat'
cardnum = 160
expansion = '10E'
type = characteristic('Enchantment')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2BB'
color = characteristic(['B'])
text = ['At the beginning of your upkeep, if twenty or more creature cards are in your graveyard, you win the game.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = PlayerTrigger(event=UpkeepStepEvent()),
                                      match_condition = lambda player, card=card: player == card.controller and len(player.graveyard.get(isCreatureType)) >= 20,
                                      ability = Ability(card, target=Target(targeting="you"),
                                                        effects=WinGame()))]
subrole.static_abilities = []

#################################