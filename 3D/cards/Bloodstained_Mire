name = 'Bloodstained Mire'
cardnum = 313
expansion = 'Onslaught'
type = characteristic('Land')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = ''
color = no_characteristic()
text = ['T, Pay 1 Life, Sacrifice Bloodstained Mire: Search your library for an Swamp or Mountain card and put it into play. Then shuffle your library.']

out_play_role = NoRole(card)
subrole = Land(color)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = [ActivatedAbility(card, MultipleCosts([TapCost(), LifeCost(1), SacrificeCost()]),
                                target=Target(targeting="controller"),
                                effects=[MoveCards(from_zone="library", to_zone="play", card_types=isLandType.with_condition(lambda l: l.subtypes == "Mountain" or l.subtypes == "Swamp"), number=1), ShuffleLibrary()])
]

#################################








