name = 'Blaze'
cardnum = 190
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = 'XR'
color = characteristic(['R'])
text = ['Blaze deals X damage to target creature or player.']

mc = ManaCost(cost)
out_play_role.abilities = [CastSorcerySpell(card, mc, target=Target(target_types=[isCreature, isPlayer]), effects=DealDamage(mc.X))]