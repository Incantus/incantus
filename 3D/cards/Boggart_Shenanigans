name = 'Boggart Shenanigans'
cardnum = 155
expansion = 'Lorwyn'
type = characteristic('Enchantment')
supertype = no_characteristic()
subtypes = characteristic(['Goblin'])
cost = '2R'
color = characteristic(['R'])
text = ['Whenever another Goblin you control is put into a graveyard from play, you may have Boggart Shenanigans deal 1 damage to target player. ']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Enchantment()
in_play_role = Permanent(card, subrole)

#################################

subrole.triggered_abilities = [TriggeredAbility(
	card,
	trigger=EnterFromTrigger(
		from_zone="play",
		to_zone="graveyard"),
	match_condition = lambda c, self=card: isPermanent(c) 
		and c.controller == self.controller
		and c.subtypes == "Goblin"
		and not c == self,
	ability = Ability(
		card,
		target=Target(target_types=isPlayer),
		effects=YouMay(DealDamage(1))))]

# Tribal

#################################