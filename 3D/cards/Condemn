name = 'Condemn'
cardnum = 13
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = 'W'
color = characteristic(['W'])
text = ["Put target attacking creature on the bottom of its owner's library. Its controller gains life equal to its toughness."]

attacking = Target(target_types=isCreature.with_condition(lambda c: c.attacking))
out_play_role.abilities = [CastInstantSpell(card, cost=cost,
				target=[attacking, SpecialTarget(lambda t=attacking: t.target.controller)],
				effects=[ChangeZoneFromPlay(to_zone="library", to_position="bottom"),
					 ChangeLife(lambda life, t=attacking:life+t.target.toughness)], copy_targets=False)]