name = 'Threaten'
cardnum = 242
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2R'
color = characteristic(['R'])
text = ['Untap target creature and gain control of it until end of turn. That creature gains haste until end of turn.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=Target(target_types=isCreature),
                                effects=[UntapTargetPermanent(), ChangeController(expire=True), GiveKeyword(haste, keyword="haste")]) 
]
