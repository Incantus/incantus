name = 'Hail of Arrows'
cardnum = 18
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = 'XW'
color = characteristic(['W'])
text = ['Hail of Arrows deals X damage divided as you choose among any number of target attacking creatures.']

# XXX Distribute Damage not implemented

mc = ManaCost("XW")
out_play_role.abilities = [CastInstantSpell(card, mc,
				target=AllPermanentTargets(isCreature.with_condition(lambda c: c.attacking)),
				effects=DistributeDamage(amount=mc.X))
]