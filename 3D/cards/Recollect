name = 'Recollect'
cardnum = 289
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2G'
color = characteristic(['G'])
text = ['Return target card from your graveyard to your hand.']

out_play_role.abilities = [CastSorcerySpell(card, cost,
                                target=Target(target_types=isCard, zone="graveyard", player_zone="controller"),
                                effects=ChangeZone(from_zone="graveyard", to_zone="hand"))]