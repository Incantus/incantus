
name = 'Plague Wind'
cardnum = 169
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '7BB'
color = characteristic(['B'])
text = ["Destroy all creatures you don't control. They can't be regenerated."]

out_play_role.abilities = [CastSorcerySpell(card, cost,
                                target=AllPermanentTargets(target_types=isCreature.with_condition(lambda c, self=card: not c.controller == self.controller)),
                                effects=ForEach(DestroyNoRegenerate()))
]
