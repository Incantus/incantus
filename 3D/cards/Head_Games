name = 'Head Games'
cardnum = 148
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '3BB'
color = characteristic(['B'])
text = ["Target opponent puts the cards from his or her hand on top of his or her library. Search that player's library for that many cards. The player puts those cards into his or her hand, then shuffles his or her library."]

target = Target(target_types=OpponentMatch(card))
size_hand = LazyInt(lambda t=target: len(t.target.hand), finalize=True)
out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=target,
                                effects=[MoveCards(from_zone="hand", from_position="top", to_zone="library", to_position="top", number=size_hand), MoveCards(from_zone="library", to_zone="hand", number=size_hand, peek=True, required=True)], copy_targets=False)]
