name = 'Cephalid Coliseum'
cardnum = 0
expansion = ''
type = characteristic('Land')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = NoCost()
color = no_characteristic()
text = ['T Add U to your mana pool. Cephalid Coliseum deals 1 damage to you.', 'Threshold - U, T, Sacrifice Cephalid Coliseum: Target player draws three cards, then discards three cards. Play this ability only if seven or more cards are in your graveyard.']

subrole = Land(color)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = [ManaAbility(card, TapCost(), effects=[AddMana('U'),DealDamage(1)]),
		     ThresholdAbility(card, cost=MultipleCosts([ManaCost("U"), TapCost(), SacrificeCost()]), target=Target(target_types=isPlayer), effects=[DrawCard(3), DiscardCard(3)])]

#################################