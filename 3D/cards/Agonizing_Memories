name = 'Agonizing Memories'
cardnum = 126
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2BB'
color = characteristic(['B'])
text = ["Look at target player's hand and choose two cards from it. Put them on top of that player's library in any order."]

out_play_role.abilities = [CastSorcerySpell(card, cost, target=Target(target_types=isPlayer), 
					effects=MoveCards(from_zone="hand", to_zone="library", to_position="top", number=2, peek=True, required=True))]