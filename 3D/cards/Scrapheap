name = 'Scrapheap'
cardnum = 132
expansion = 'Urza\'s Legacy'
type = characteristic('Artifact')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '3'
color = no_characteristic()
text = ['Whenever an artifact or enchantment is put into your graveyard from play, you gain 1 life.']

card.out_play_role.abilities = [CastPermanentSpell(card, card.cost)]

subrole = Artifact()

in_play_role = Permanent(card, subrole)

#################################

subrole.triggered_abilities = [TriggeredAbility(card,
                                        trigger=EnterFromTrigger(from_zone="play", to_zone="graveyard", player="controller"),
                                        match_condition=lambda card: isEnchantment(card) or isArtifact(card),
                                        ability=Ability(card, effects=ChangeLife(1))),]

#################################