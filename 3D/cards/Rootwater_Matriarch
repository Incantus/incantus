
name = 'Rootwater Matriarch'
cardnum = 103
expansion = '10E'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Merfolk'])
cost = '2UU'
color = characteristic(['U'])
text = ['T: Gain control of target creature as long as that creature is enchanted.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(2, 3)

in_play_role = Permanent(card, subrole)

#################################

# XXX This won't work multiple times, also you should be able to target non-enchanted creatures
target=Target(target_types=isCreature.with_condition(lambda c: c.enchanted))
subrole.abilities = [ActivatedAbility(card, TapCost(),
                                target=target,
                                effects=DoUntil(effect=ChangeController(), event=UnAttachedEvent(), match_condition= lambda sender, unattached, t=target: unattached==t.target),
                                copy_targets=False)
]
subrole.triggered_abilities = []
subrole.static_abilities = []

#################################
