subrole = Land(color)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = [ManaAbility(card, cost=TapCost(), effects=AddMana('R')),ManaAbility(card, cost=TapCost(), effects=AddMana('W'))
]

