
name = 'Shatterstorm'
cardnum = 229
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '2RR'
color = characteristic(['R'])
text = ["Destroy all artifacts. They can't be regenerated."]

out_play_role.abilities = [CastSorcerySpell(card, cost,
                                target=AllPermanentTargets(target_types=isArtifact),
                                effects=ForEach(DestroyNoRegenerate()))
]
