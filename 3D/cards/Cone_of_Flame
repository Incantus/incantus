
name = 'Cone of Flame'
cardnum = 194
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '3RR'
color = characteristic(['R'])
text = ['Cone of Flame deals 1 damage to target creature or player, 2 damage to another target creature or player, and 3 damage to a third target creature or player.']

out_play_role.abilities = [CastSorcerySpell(card, cost,
                                target=MultipleTargets(number=3, target_types=isPlayerOrCreature),
                                effects=ForEach([DealDamage(1), DealDamage(2), DealDamage(3)]))
]
