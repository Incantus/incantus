
name = 'Terror'
cardnum = 182
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1B'
color = characteristic(['B'])
text = ["Destroy target nonartifact, nonblack creature. It can't be regenerated."]

out_play_role.abilities = [CastInstantSpell(card, cost,
                                target=Target(target_types=isCreature.with_condition(lambda creature: not creature.color == "B" and not creature.type == "Artifact")),
                                effects=DestroyNoRegenerate())
]
