name = 'Thrull Surgeon'
cardnum = 183
expansion = '10E'
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Thrull'])
cost = '1B'
color = characteristic(['B'])
text = ["1B, Sacrifice Thrull Surgeon: Look at target player's hand and choose a card from it. That player discards that card. Play this ability only any time you could play a sorcery."]

subrole = Creature(1, 1)

in_play_role = Permanent(card, subrole)

#################################

# XXX Won't trigger DiscardCard effects
subrole.abilities = [ActivatedAbility(card, MultipleCosts([ManaCost("1B"), SacrificeCost()]),                                target=Target(target_types=isPlayer),
                                effects=MoveCards(from_zone="hand", to_zone="graveyard", number=1, peek=True),
                                limit=SorceryLimit(card))
]
subrole.triggered_abilities = []
subrole.static_abilities = []

#################################

