name = 'Squee, Goblin Nabob'
cardnum = 239
expansion = '10E'
type = characteristic('Creature')
supertype = characteristic('Legendary')
subtypes = characteristic(['Goblin'])
cost = '2R'
color = characteristic(['R'])
text = ['At the beginning of your upkeep, you may return Squee, Goblin Nabob from your graveyard to your hand.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(1, 1)

in_play_role = Permanent(card, subrole)

#################################

out_play_role.graveyard_abilities = [TriggeredAbility(card, 
                                      trigger = PlayerTrigger(event=UpkeepStepEvent()),
                                      match_condition = lambda player, self=card: player == self.owner,
                                      ability = Ability(card, target=Target(targeting="self"),
                                                        effects=OwnerMay(ChangeZone(from_zone="graveyard", to_zone="hand"), msg="return ~ from graveyard to your hand")))
]

#################################