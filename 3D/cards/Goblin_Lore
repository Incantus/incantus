name = 'Goblin Lore'
cardnum = 208
expansion = '10E'
type = characteristic('Sorcery')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1R'
color = characteristic(['R'])
text = ['Draw four cards, then discard three cards at random.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=Target(targeting="you"),
                                effects=[DrawCard(4), PauseEffect("Discard 3 at random"), DiscardCard(3, random=True)])
]

