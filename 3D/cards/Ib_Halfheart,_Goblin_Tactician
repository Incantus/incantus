name = 'Ib Halfheart, Goblin Tactician'
cardnum = 163
expansion = 'Time Spiral'
type = characteristic('Creature')
supertype = characteristic('Legendary')
subtypes = characteristic(['Goblin', 'Advisor'])
cost = '3R'
color = characteristic(['R'])
text = ['Whenever another Goblin you control becomes blocked, sacrifice it. If you do, it deals 4 damage to each creature blocking it.', 'Sacrifice two Mountains: Put two 1/1 red Goblin creature tokens into play. ']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(3, 2)
in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = [ActivatedAbility(card,
  cost=SacrificeCost(cardtype=isLand.with_condition(lambda l: l.subtypes == "Mountain"),number=2),
  target=Target(targeting="you"),
  effects = CreateToken(number=2, token_info={"name": "Goblin", "type": "Creature", "subtypes": "Goblin", "color": "R", "role": TokenCreature(1,1)}))]

trigger = Trigger(AttackerBlockedEvent())
subrole.triggered_abilities = [TriggeredAbility(card,
  trigger = trigger,
  match_condition = lambda sender, blockers, card=card: isCreature.with_condition(lambda c: c.subtypes == "Goblin") and not sender == card and sender.controller == card.controller,
  ability = Ability(card,
    target=[TriggeredTarget(trigger,"sender"),
            AllPermanentTargets(isCreature.with_condition(lambda c, trigger=trigger: c in trigger.blockers))],
    effects=DependentEffects(Sacrifice(), ForEach(DealDamage(4)))))]

#################################