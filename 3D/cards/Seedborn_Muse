name = 'Seedborn Muse'
cardnum = 296
expansion = '10E'
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Spirit'])
cost = '3GG'
color = characteristic(['G'])
text = ["Untap all permanents you control during each other player's untap step."]

subrole = Creature(2, 4)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
subrole.triggered_abilities = [TriggeredAbility(card,
                                        trigger=PlayerTrigger(event=UntapStepEvent()),
                                        match_condition=PlayerMatch(lambda player, card=card: not player == card.controller),
                                        ability=StacklessAbility(card, target=AllPermanentTargets(isPermanent.with_condition(lambda p: p.tapped)),
                                                effects=ForEach(UntapTargetPermanent())))
]
subrole.static_abilities = []

#################################
