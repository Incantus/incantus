name = 'Mudbutton Torchrunner'
cardnum = 185
expansion = 'Lorwyn'
type = characteristic('Creature')
supertype = no_characteristic()
subtypes = characteristic(['Goblin', 'Warrior'])
cost = '2R'
color = characteristic(['R'])
text = ['When Mudbutton Torchrunner is put into a graveyard from play, it deals 3 damage to target creature or player.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Creature(1, 1)
in_play_role = Permanent(card, subrole)

#################################

subrole.triggered_abilities = [TriggeredAbility(
	card,
    	trigger=EnterFromTrigger(
		from_zone="play",
		to_zone="graveyard"),
	match_condition=SelfMatch(card),
	ability = Ability(
		card, 
		target=Target(target_types=[isCreature,isPlayer]),
		effects=DealDamage(3)))]

#################################