
name = 'Sunken Hope'
cardnum = 112
expansion = '10E'
type = characteristic('Enchantment')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '3UU'
color = characteristic(['U'])
text = ["At the beginning of each player's upkeep, that player returns a creature he or she controls to its owner's hand."]

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

trigger = PlayerTrigger(event=UpkeepStepEvent())
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = trigger,
                                      match_condition = lambda player: True,
                                      ability = PostponedAbility(card,
                                                        target=Target(target_types=isCreature.with_condition(lambda c, t=trigger: c.controller == t.player),, selector="current_player"),
                                                        effects=ChangeZoneFromPlay(to_zone="hand")))
]

#################################
