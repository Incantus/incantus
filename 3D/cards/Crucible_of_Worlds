
name = 'Crucible of Worlds'
cardnum = 319
expansion = '10E'
type = characteristic('Artifact')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '3'
color = no_characteristic()
text = ['You may play land cards from your graveyard.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Artifact()

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
subrole.triggered_abilities = []

def check_zone(self, card=card):
    return self.card.zone == card.controller.graveyard

from Action import PlayLand
subrole.static_abilities = [GlobalStaticAbility(card,
                                  effects=OverrideGlobal(check_zone, "check_zone", PlayLand, combiner=logical_or, expire=False))]

#################################
