name = 'Dreamborn Muse'
cardnum = 82
expansion = '10E'
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Spirit'])
cost = '2UU'
color = characteristic(['U'])
text = ["At the beginning of each player's upkeep, that player puts the top X cards of his or her library into his or her graveyard, where X is the number of cards in his or her hand."]

subrole = Creature(2, 2)

in_play_role = Permanent(card, subrole)

#################################

trigger = PlayerTrigger(event=UpkeepStepEvent())
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = trigger,
                                      match_condition = lambda p: True,
                                      ability = Ability(card,
                                                  target=Target(targeting=lambda t=trigger: t.player),
                                                        effects=MoveCards(from_zone="library", from_position="top", to_zone="graveyard", number=LazyInt(lambda t=trigger: len(t.player.hand)))))
]

#################################



