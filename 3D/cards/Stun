name = 'Stun'
cardnum = 240
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1R'
color = characteristic(['R'])
text = ["Target creature can't block this turn.", 'Draw a card.']

out_play_role.abilities = [CastInstantSpell(card, cost,
                                target=[Target(target_types=isCreature), Target(targeting="you")],
                                effects=[GiveKeyword(lambda i: override(i, "canBlock", lambda self: False), keyword="Can't block"), DrawCard(1)])
]