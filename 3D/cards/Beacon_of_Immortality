name = 'Beacon of Immortality'
cardnum = 10
expansion = '10E'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '5W'
color = characteristic(['W'])
text = ["Double target player's life total. Shuffle Beacon of Immortality into its owner's library."]

out_play_role.abilities = [CastInstantSpell(card, cost,
                                target=[Target(target_types=isPlayer),
                                        Target(targeting="owner")],
                                effects = [ChangeLife(lambda life: life*2), ShuffleIntoLibrary()])
]