name = 'Swords to Plowshares'
cardnum = 54
expansion = 'Ice Age'
type = characteristic('Instant')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = 'W'
color = characteristic(['W'])
text = ["Remove target creature from the game. Its controller gains life equal to its power."]

#################################

remove = Target(target_types=isCreature)
out_play_role.abilities = [CastNonPermanentSpell(card, cost=cost,
                target=[remove, SpecialTarget(targeting=lambda t=remove: t.target.controller)],
                effects=[ChangeZoneFromPlay(to_zone="removed"),
                     ChangeLife(lambda life, t=remove:life+t.target.power)],
		copy_targets=False)]
                           
#################################