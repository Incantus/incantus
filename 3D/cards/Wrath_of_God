name = 'Wrath of God'
cardnum = 61
expansion = '10E'
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '2WW'
color = characteristic(['W'])
text = ["Destroy all creatures. They can't be regenerated."]

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=AllPermanentTargets(target_types=isCreature),
                                effects=ForEach(DestroyNoRegenerate()))]



