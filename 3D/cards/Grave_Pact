
name = 'Grave Pact'
cardnum = 144
expansion = '10E'
type = characteristic('Enchantment')
supertype = no_characteristic()
subtypes = no_characteristic()
cost = '1BBB'
color = characteristic(['B'])
text = ['Whenever a creature you control is put into a graveyard from play, each other player sacrifices a creature.']

out_play_role.abilities = [CastPermanentSpell(card, cost)]
subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

subrole.triggered_abilities = [TriggeredAbility(card,
                                        trigger=EnterFromTrigger(from_zone="play", to_zone="graveyard"),
                                        match_condition = lambda card, self=card: isCreatureType(card) and card.controller == self.controller,
                                        ability = Ability(card, target=Target("opponent"), effects=ForceSacrifice()))
]

#################################
