name = "Boldwyr Intimidator"
cardnum = 111
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Giant', 'Warrior'])
cost = '5RR'
color = characteristic(['R'])
text = ["Cowards can't block Warriors.", "R: Target creature becomes a Coward until end of turn.", "2R: Target creature becomes a Warrior until end of turn."]

subrole = Creature(5,5)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []

def canBeBlockedBy(self, blocker):
    return not blocker.subtypes == "Coward"
override(subrole, "canBeBlockedBy", canBeBlockedBy)

subrole.abilities = [ActivatedAbility(card, cost="R", target=Target(target_types=isCreature),
				effects = ModifySubType(characteristic("Coward"))),
		     ActivatedAbility(card, cost="2R", target=Target(target_types=isCreature),
				effects = ModifySubType(characteristic("Warrior")))
]

#################################
