name = "Preeminent Captain"
cardnum = 304
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Kithkin', 'Soldier'])
cost = '2W'
color = characteristic(['W'])
text = ["First strike", "Whenever Preeminent Captain attacks, ..."]

subrole = Creature(2, 2)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
first_strike(subrole)

def tapped_and_attacking(soldier): soldier.setAttacking()

subrole.triggered_abilities = [TriggeredAbility(card,
                                        trigger = Trigger(DeclareAttackersEvent()),
					match_condition = lambda attackers, self=card: self.attacking,
					ability = Ability(card,
						effects=MoveTargetCards(from_zone="hand", to_zone="play", card_types=isCreatureType.with(lambda c: c.subtypes == "Soldier"), func=tapped_and_attacking, required=False)))
]
subrole.static_abilities = []

#################################
