name = 'Armor Sliver'
cardnum = 216
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Sliver'])
cost = '2W'
color = characteristic(['W'])
text = ['All Sliver creatures have "2: This creature gets +0/+1 until end of turn."']

subrole = Creature(2,2)
in_play_role = Permanent(card, subrole)

ability = ActivatedAbility(card, cost=ManaCost(2),
               target=Target(targeting="self"),
	       effects=AugmentPowerToughness(0,1))

subrole.static_abilities = [PermanentTrackingAbility(card,
                               enter_condition = isCreature.with(lambda c: c.subtypes == "Sliver"),
                               leave_condition = isCreature.with(lambda c: c.subtypes == "Sliver"),
                               effects = AddActivatedAbility(ability, expire=False)),
]
