name = 'Battlewand Oak'
cardnum = 197
type = characteristic('Creature')
supertype = characteristic('')
subtypes = characteristic(['Treefolk', 'Warrior'])
cost = '2G'
color = characteristic(['G'])
text = ['Whenever a Forest comes into play under your control, Battlewand Oak gets +2/+2 until end of turn.', 'Whenever you play a Treefolk spell, Battlewand Oak gets +2/+2 until end of turn.']

subrole = Creature(1, 3)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
subrole.triggered_abilities = [TriggeredAbility(card,
                                      trigger = EnterTrigger("play"),
                                      match_condition=isLand.with(lambda l: l.subtypes == "Forest"),
                                      ability=Ability(card, target=Target(targeting="self"),
                                                 effects=AugmentPowerToughness(2,2))),
			       TriggeredAbility(card,
                                      trigger=CardTrigger(event=PlaySpellEvent()),
                                      match_condition=CardMatch(lambda card, self=card: card.controller == self.controller and card.subtypes == "Treefolk"),
                                      ability=Ability(card, target=Target(targeting="self"),
                                                 effects=AugmentPowerToughness(2,2)))
]
subrole.static_abilities = []

#################################
