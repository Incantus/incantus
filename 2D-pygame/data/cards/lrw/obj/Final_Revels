name = 'Final Revels'
cardnum = 113
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '4B'
color = characteristic(['B'])
text = ['All creatures get +2/+0 until end of turn', 'all creatures get -0/-2 until end of turn.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
				target=AllPermanentTargets(target_types=isCreature),
				effects=ForEach(AugmentPowerToughness(2,0))),
			   CastNonPermanentSpell(card, cost,
                                target=AllPermanentTargets(target_types=isCreature),
                                effects=ForEach(AugmentPowerToughness(0,-2)))]
