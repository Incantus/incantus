name = 'Forced Fruition'
cardnum = 66
type = characteristic('Enchantment')
supertype = characteristic('')
subtypes = characteristic([])
cost = '4UU'
color = characteristic(['U'])
text = ['Whenever an opponent plays a spell, that player draws seven cards.']

subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
trigger=CardTrigger(event=PlaySpellEvent())
subrole.triggered_abilities = [TriggeredAbility(card,
					trigger = trigger,
                                        match_condition=CardMatch(lambda card, self=card: not card.controller == self.controller),
                                        ability=Ability(card, target=Target(targeting=lambda t=trigger: t.sender),
						effects=DrawCard(7)))
]
subrole.static_abilities = []

#################################
