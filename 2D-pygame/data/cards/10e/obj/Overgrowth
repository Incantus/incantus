name = 'Overgrowth'
cardnum = 283
type = characteristic('Enchantment')
supertype = characteristic('')
subtypes = characteristic(['Aura'])
cost = '2G'
color = characteristic(['G'])
text = ['Enchant land', 'Whenever enchanted land is tapped for mana, its controller adds GG to his or her mana pool.']

target_type = isLand
out_play_role.abilities = [CastPermanentSpell(card, cost,
                               target=Target(target_types=target_type),
                               effects=AttachToPermanent())]
subrole = Aura(target_type)

in_play_role = Permanent(card, subrole)

#################################

trigger = Trigger(ManaEvent())
subrole.abilities = []
subrole.triggered_abilities = [TriggeredAbility(card,
                                        trigger = trigger,
                                        match_condition = lambda sender, c=card: sender==c.attached_to,
                                        ability = ManaAbility(card, target=Target(targeting=lambda t=trigger: t.sender.controller),
                                                    effects=AddMana("GG"))),
]
subrole.static_abilities = []
subrole.attached_abilities = []

#################################
