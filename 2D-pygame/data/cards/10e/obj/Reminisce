name = 'Reminisce'
cardnum = 99
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '2U'
color = characteristic(['U'])
text = ['Target player shuffles his or her graveyard into his or her library.']

target=Target(target_types=isPlayer)
out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=target,
                                effects=[MoveTargetCards(from_zone="graveyard", from_position="top", to_zone="library", number=LazyInt(lambda target=target: len(target.target.graveyard), finalize=True)), ShuffleLibrary()])
]
