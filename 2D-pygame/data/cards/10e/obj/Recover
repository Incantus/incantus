name = 'Recover'
cardnum = 172
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '2B'
color = characteristic(['B'])
text = ['Return target creature card from your graveyard to your hand.', 'Draw a card.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=Target(targeting="controller"),
                                effects=[MoveTargetCards(from_zone="graveyard", to_zone="hand", card_types=isCreatureType, number=1), DrawCard(1)])        
]
