name = 'Furnace of Rath'
cardnum = 204
type = characteristic('Enchantment')
supertype = characteristic('')
subtypes = characteristic([])
cost = '1RRR'
color = characteristic(['R'])
text = ['If a source would deal damage to a creature or player, it deals double that damage to that creature or player instead.']

subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
subrole.triggered_abilities = []
def dealDamage(self, target, amount, combat=False):
    return (self, target, 2*amount, combat)

subrole.static_abilities = [GlobalStaticAbility(card,
                                effects=[OverrideGlobal(dealDamage, "dealDamage", Spell, combiner=modify_args, expire=False),
                                         OverrideGlobal(dealDamage, "dealDamage", Permanent, combiner=modify_args, expire=False)])
]

#################################
