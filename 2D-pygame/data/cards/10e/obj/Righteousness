name = 'Righteousness'
cardnum = 36
type = characteristic('Instant')
supertype = characteristic('')
subtypes = characteristic([])
cost = 'W'
color = characteristic(['W'])
text = ['Target blocking creature gets +7/+7 until end of turn.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=Target(target_types=isCreature.with(lambda c: c.blocking)),
                                effects=AugmentPowerToughness(power=7, toughness=7))]
