name = 'Sudden Impact'
cardnum = 241
type = characteristic('Instant')
supertype = characteristic('')
subtypes = characteristic([])
cost = '3R'
color = characteristic(['R'])
text = ["Sudden Impact deals damage equal to the number of cards in target player's hand to that player."]

target=Target(target_types=isPlayer)
out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=target,
                                effects=DealDamage(LazyInt(lambda t=target:len(t.target.hand), finalize=True)))
]
