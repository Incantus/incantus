name = 'Aura of Silence'
cardnum = 6
type = characteristic('Enchantment')
supertype = characteristic('')
subtypes = characteristic([])
cost = '1WW'
color = characteristic(['W'])
text = ['Artifact and enchantment spells your opponents play cost 2 more to play.', 'Sacrifice Aura of Silence: Destroy target artifact or enchantment.']

subrole = Enchantment()

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = [ActivatedAbility(card, SacrificeCost(),
                           target=Target(target_types=[isArtifact, isEnchantment]),
                           effects=Destroy())]
subrole.triggered_abilities = []

def compute(self, card, player, s=card):
    if not player == s.controller and isSpell(card) and (isArtifactType(card) or isEnchantmentType(card)):
        self.final_cost[-1] += 2
    return True

subrole.static_abilities = [GlobalStaticAbility(card,
                               effects=OverrideGlobal(compute, "compute", ManaCost, logical_and, reverse=False, expire=False))
]

#################################
