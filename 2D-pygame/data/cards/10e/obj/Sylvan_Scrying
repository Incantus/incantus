name = 'Sylvan Scrying'
cardnum = 302
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '1G'
color = characteristic(['G'])
text = ['Search your library for a land card, reveal it, and put it into your hand. Then shuffle your library.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                                    effects=[MoveTargetCards(from_zone="library", to_zone="hand", number=1, card_types=isLandType, reveal=True), ShuffleLibrary()])
]
