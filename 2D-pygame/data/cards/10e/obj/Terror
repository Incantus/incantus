name = 'Terror'
cardnum = 182
type = characteristic('Instant')
supertype = characteristic('')
subtypes = characteristic([])
cost = '1B'
color = characteristic(['B'])
text = ["Destroy target nonartifact, nonblack creature. It can't be regenerated."]

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=Target(target_types=isCreature.with(lambda creature: not creature.color == "B" and not creature.type == "Artifact")),
                                effects=DestroyNoRegenerate())
]                               
