name = 'Condemn'
cardnum = 13
type = characteristic('Instant')
supertype = characteristic('')
subtypes = characteristic([])
cost = 'W'
color = characteristic(['W'])
text = ["Put target attacking creature on the bottom of its owner's library. Its controller gains life equal to its toughness."]

attacking = Target(target_types=isCreature.with(lambda c: c.attacking))
out_play_role.abilities = [CastNonPermanentSpell(card, cost=cost,
				target=[attacking, Target(lambda t=attacking:t.controller)],
				effects=[ChangeZoneFromPlay(to_zone="library", to_position="bottom"),
					 ChangeLife(lambda life, t=attacking:life+t.toughness)])]
