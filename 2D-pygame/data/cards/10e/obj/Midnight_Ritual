name = 'Midnight Ritual'
cardnum = 158
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = 'X2B'
color = characteristic(['B'])
text = ['Remove X target creature cards in your graveyard from the game. For each creature card removed this way, put a 2/2 black Zombie creature token into play.']

mc = ManaCost(cost)
zombie_role = TokenCreature(2,2)
token_info = {"name": "Zombie", "type": "Creature", "subtypes": ["Zombie"], "color": "B", "role": zombie_role}

out_play_role.abilities = [CastNonPermanentSpell(card, mc, target=Target(targeting="controller"),
                           effects=[MoveTargetCards(from_zone="graveyard", to_zone="removed", number=mc.X, card_types=isCreatureType),
                                    ForN(number=mc.X, effect=CreateToken(token_info))]
                           )]
