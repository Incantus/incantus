name = 'Plague Wind'
cardnum = 169
type = characteristic('Sorcery')
supertype = characteristic('')
subtypes = characteristic([])
cost = '7BB'
color = characteristic(['B'])
text = ["Destroy all creatures you don't control. They can't be regenerated."]

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=AllPermanentTargets(target_types=isCreature.with(lambda c, self=card: not c.controller == self.controller)),
                                effects=ForEach(DestroyNoRegenerate()))
]
