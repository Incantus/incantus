name = 'Arcane Teachings'
cardnum = 188
type = characteristic('Enchantment')
supertype = characteristic('')
subtypes = characteristic(['Aura'])
cost = '2R'
color = characteristic(['R'])
text = ['Enchant creature', 'Enchanted creature gets +2/+2 and has "T This creature deals 1 damage to target creature or player."']

target_type = isCreature
out_play_role.abilities = [CastPermanentSpell(card, cost,
                               target=Target(target_types=target_type),
                               effects=AttachToPermanent())]
subrole = Aura(target_type)

in_play_role = Permanent(card, subrole)

#################################

subrole.abilities = []
subrole.triggered_abilities = []
subrole.static_abilities = []
damage = ActivatedAbility(card, cost=TapCost(),
                  target=Target(target_types=isCreatureOrPlayer),
                  effects=DealDamage(1))
subrole.attached_abilities = [AuraStaticAbility(card,
                                   effects=[AugmentPowerToughness(power=2,toughness=2,expire=False),
                                            AddActivatedAbility(damage, expire=False)])
]

#################################
