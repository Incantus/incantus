name = 'Stun'
cardnum = 240
type = characteristic('Instant')
supertype = characteristic('')
subtypes = characteristic([])
cost = '1R'
color = characteristic(['R'])
text = ["Target creature can't block this turn.", 'Draw a card.']

out_play_role.abilities = [CastNonPermanentSpell(card, cost,
                                target=[Target(target_types=isCreature), Target(targeting="controller")],
                                effects=[GiveKeyword(lambda i: override(i, "canBlock", lambda self: False, chain=True), keyword="Can't block"), DrawCard(1)])
]
